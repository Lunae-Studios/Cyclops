	  "attack": "animation.Cyclops.attack",
	  "move": "animation.cyclops.move"
	  },
	  "animation_controllers":[
	  {"attacking": "controller.animation.cyclops.attack"},
	  {"move": "controller.animation.cyclops.move"},
	  {"stunned": "controller.animation.cyclops.stunned"}
	  ],
      "render_controllers": [ "controller.render.bat" ],
      "spawn_egg": {
        "texture": "spawn_egg",
