      "textures": {
        "default": "textures/cyclops"
      },
	  "scripts":{
		"scale": "2",
		"pre_animation": [
			"variable.tcos0 = (math.cos(query.modified_distance_moved * 15) * query.modified_move_speed / variable.gliding_speed_value) * 40;"
