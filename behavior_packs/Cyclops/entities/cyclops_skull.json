{
  "format_version": "1.16.0",
  "minecraft:entity": {
    "description": {
      "identifier": "lunae:cyclops_skull",
      "runtime_identifier": "minecraft:shulker",
      "is_spawnable": true,
      "is_summonable": true,
      "is_experimental": false,
      "scripts": {
        "animate": [ "skull" ]
      },
      "animations": {
        "skull": "controller.animation.skull.summon_event"
      }
    },

    "component_groups": {
      "cyclops_first_stage": {
        "minecraft:is_charged": {
        },
        "minecraft:instant_despawn": {
        }
      }
    },

    "components": {
      "minecraft:interact": {
        "interactions": {
          "use_item": true,
          "swing": true,
          "interact_text": "Regenerate",
          "on_interact": {
            "filters": {
              "all_of": [
                {
                  "test": "is_family",
                  "subject": "other",
                  "value": "player"
                }
              ],
              "any_of": [
                {
                  "test": "has_equipment",
                  "subject": "other",
                  "domain": "hand",
                  "value": "minecraft:potion:28"
                },
                {
                  "test": "has_equipment",
                  "subject": "other",
                  "domain": "hand",
                  "value": "minecraft:potion:29"
                },
                {
                  "test": "has_equipment",
                  "subject": "other",
                  "domain": "hand",
                  "value": "minecraft:potion:30"
                }
              ]
            },
            "event": "enter_first_stage",
            "target": "self"
          }
        }
      },
      "minecraft:type_family": {
        "family": [ "inanimate" ]
      },
      "minecraft:collision_box": {
        "width": 2.0,
        "height": 2.0
      },
      "minecraft:damage_sensor": {
        "triggers": {
          "cause": "all",
          "deals_damage": false
        }
      },
      "minecraft:movement": {
        "value": 0.0
      },
      "minecraft:is_stackable": {
      },
      "minecraft:persistent": {
      },
      "minecraft:nameable": {
      },
      "minecraft:physics": {
      }
    },

    "events": {	
      "enter_first_stage": {
        "add": {
          "component_groups": [ "cyclops_first_stage" ]
        }
      }
    }
  }
}