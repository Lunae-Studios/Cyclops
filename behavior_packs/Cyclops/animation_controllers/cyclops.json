{
	"format_version" : "1.10.0",
	"animation_controllers" : {
		"controller.animation.cyclops" : {
			"states" : {
				"default" : {
					"transitions" : [
						{
							"half_health" : "query.health == 1000 || query.health == 3000 || query.health == 8600"
						}
					],
					"on_entry":[
					"/tag @s remove stun",
					"/tag @s remove hit"
					]
				},
				"half_health" : {					
					"transitions" : [
						{
							"stunned" : "query.health <= (query.max_health/2)"
						}
					]
				},
				"stunned":{
					"transitions" : [
						{
							"remove" : "(1.0)"
						}
					],
					"on_entry":[
						"/tag @s add stun",
						"/tag @s add hit"
					]
				},
				"remove":{
					"transitions" : [
						{
							"default" : "(0.0)"
						}
					],
					"on_entry":[
						"/tag @s remove stun"
					]
				}
			}
		},
		"controller.animation.cyclops.heal" : {
			"states" : {
				"default" : {
					"transitions" : [
						{
							"heal": "!query.is_alive"
						}
					]
				},
				"heal":{
					"transitions":[
						{
							"default": "query.is_alive"
						}
					],
					"on_entry":[
						"/effect @e[type=lunae:cyclops_final,r=50] instant_health 1 3 true",
						"/effect @e[type=lunae:cyclops_second,r=50] instant_health 1 1 true"
					]
				}
			}
		},
		"controller.animation.cyclops.lev" : {
			"states" : {
				"default" : {
					"transitions" : [
						{
							"levitate": "query.is_saddled"
						}
					]
				},
				"levitate":{
					"on_entry":[
						"/effect @a[r=10] levitation 3 2 true"
					],
					"transitions" : [
						{
							"default": "!query.is_saddled"
						}
					]
				}
			}
		},
		"controller.animation.cyclops.death" : {
			"states" : {
				"default" : {
					"transitions" : [
						{
							"invis": "!query.is_alive"
						}
					]
				},
				"invis":{
					"on_entry":[
						"/effect @s invisibility 10 5 true"
					]
				}
			}
		}
	}
}
